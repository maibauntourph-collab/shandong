{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2023"
        ],
        "outDir": "./dist/server",
        "rootDir": "./server",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": true,
        "paths": {
            "@shared/*": [
                "./shared/*"
            ]
        },
        "baseUrl": "."
    },
    "include": [
        "server/**/*",
        "shared/**/*"
    ]
}