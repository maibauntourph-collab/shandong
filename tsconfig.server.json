{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist/server",
        "module": "CommonJS",
        "target": "ES2020",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "server/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "client",
        "dist",
        "node_modules"
    ]
}